<div class="container mt-5">
    <h1 style="text-align: center; font-size: 50px;font-family: 'Times New Roman', Times, serif;">Sign up </h1>
    <p style="color: blue; text-align: center;">for Create a new Account</p>
    <hr>
            <form action="/signup" method="post">
            <div class="form-row mt-5">
                <div class="form-group col-md-6">
                <label for="inputname">Name</label>
                <input type="text" name="name" class="form-control" id="inputname" placeholder="Enter your Valid Name">
                </div>
                <div class="form-group col-md-6">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email">
                </div>
                <div class="form-group col-md-6">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <label for="inputnumber">Mobile No</label>
                <input type="text" name="mobile_no" class="form-control" id="inputnumber" placeholder="Valid Mobile Number">
            </div>
            <div class="form-group">
                <label for="inputAddress">Address</label>
                <input type="text" name="address" class="form-control" id="inputAddress" placeholder="Apartment, studio, or floor">
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" name="city_name" class="form-control" id="inputCity">
                </div>
                <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select name="state" id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option value="india">India</option>
                </select>
                </div>
                <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input name="zipcode" type="text" class="form-control" id="inputZip">
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
            <hr>
</div>