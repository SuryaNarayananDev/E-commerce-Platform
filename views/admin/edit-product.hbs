
<div class="container">
    <h1 style="font-size: 50px;font-family: 'Times New Roman', Times, serif;color: chocolate;" class="mt-5">Edit Product</h1>
    <div class="mt-5">
        <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6 mr-auto">
                    <label for="inputname">Title</label>
                    <input type="text" name="name" class="form-control" id="inputname" placeholder="Enter Display Name" value="{{product.name}}">
                </div>
               
                
                 <div class="form-group col-md-6  mr-1" >
                    <label for="inputdisciption">Discription</label>
                    <input type="text" name="discription" class="form-control" id="inputdisciption" placeholder="About your Product" value="{{product.discription}}">
                </div>
            </div>
            
            <div class="form-group mr-1">
                    <input type="file" name="image" onchange="readURL(this);" />
                    <img id="blah" src="/product-images/{{product._id}}.jpg"  alt="your image" / style="width: 300px;height: 300px;">
                </div>
            
            <div class="form-row">
                <div class="form-group col-md-3 ">
                    <label for="inputprice">Price</label>
                    <input style="" type="number" name="price" class="form-control" id="inputprice" placeholder="Amount in INR" value="{{product.price}}">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">Product Category</label>
                    <select name="category" id="inputState" class="form-control">
                        <option value="{{product.category}}" selected>{{product.category}}</option>
                        <option value="Electronic" >Electronic</option>
                        <option value="Craft" >Craft</option>
                        <option value="Books" >Books</option>
                        <option value="Mobiles" >Mobiles</option>
                        
                        <option value="other">other...</option>
                    </select>
                </div>
            </div>
           
            <button type="submit" class="btn btn-success">Publish</button>
        </form>
        <hr>
    </div>
</div>

